{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": false,                    // disable strict mode
    "noUnusedLocals": false,            // ignore unused variables
    "noUnusedParameters": false,        // ignore unused params
    "noImplicitAny": false,             // allow implicit 'any'
    "noImplicitReturns": false,         // ignore missing returns
    "skipLibCheck": true,               // skip checking all declaration files
    "allowJs": true,                     // allow JS files
    "resolveJsonModule": true,
    "isolatedModules": false,            // disable isolatedModules
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
